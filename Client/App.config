<?xml version="1.0" encoding="utf-8"?>
<configuration>

	<system.serviceModel>
		<!-- Bindings first -->
		<bindings>
			<netTcpBinding>
				<binding name="StreamedBinding"
						 transferMode="Streamed"
						 maxReceivedMessageSize="10485760"
						 maxBufferSize="10485760"
						 openTimeout="00:00:30"
						 sendTimeout="00:10:00"
						 receiveTimeout="00:30:00"
						 closeTimeout="00:00:30">
					<security mode="None"/>
				</binding>
			</netTcpBinding>
		</bindings>

		<!-- Client endpoints -->
		<client>
			<endpoint
			  name="WeatherService"
			  contract="Common.IServiceContract"
			  address="net.tcp://localhost:8000/WeatherService"
			  binding="netTcpBinding"
			  bindingConfiguration="StreamedBinding" />
		</client>
	</system.serviceModel>

	<!-- App-specific settings -->
	<appSettings>
		<add key="CsvFilePath" value="C:\Users\obren\OneDrive\Desktop\WeatherStation\WeatherStation\weatherdata\cleaned_weather.csv"/>
		<add key="LogFilePath" value="Logs\client.log"/>
	</appSettings>

	<!-- Runtime -->
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
	</startup>

</configuration>
